{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "app/*": [
        "src/app/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "widgets/*": [
        "src/widgets/*"
      ],
      "features/*": [
        "src/features/*"
      ],
      "entities/*": [
        "src/entities/*"
      ],
      "shared/*": [
        "src/shared/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
